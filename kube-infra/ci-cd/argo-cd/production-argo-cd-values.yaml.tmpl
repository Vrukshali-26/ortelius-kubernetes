server:

  service:
    type: NodePort

  extraArgs:
  - --insecure

  ingress: 
    enabled: true
    https: false
    # ingressClassName: "gce"
    annotations: 
      kubernetes.io/ingress.class: gce
      # nginx.ingress.kubernetes.io/backend-protocol: "HTTPS"
      # nginx.ingress.kubernetes.io/ssl-passthrough: "true"
      # kubernetes.io/tls-acme: "true"
      #external-dns.alpha.kubernetes.io/hostname: argocd.$CLIENT_DOMAIN_URL
      cert-manager.io/cluster-issuer: letsencrypt-$CLIENT_CODE-$CLIENT_ENVIRONMENT-aws
    hosts:
      - argocd.$CLIENT_DOMAIN_URL
    tls:
      - hosts:
          - argocd.$CLIENT_DOMAIN_URL
        secretName: letsencrypt-$CLIENT_CODE-prod-argo-cd

  additionalProjects:
  - name: odysseycloud
    namespace: ci-cd
    description: odysseycloud Project
    sourceRepos:
    - '*'
    destinations:
    - namespace: '*'
      server: $ARGO_DESTINATION_CLUSTER_SERVER
    clusterResourceWhitelist: 
    - group: '*'
      kind: '*'
    namespaceResourceWhitelist:
    - group: '*'
      kind: '*'

  # clusterCredentials:
  # - name: $CLIENT_CODE-$CLOUD_PROVIDER-$CLIENT_ENVIRONMENT 
  #   server: $ARGO_DESTINATION_CLUSTER_SERVER
  #   labels: {}
  #   annotations: {}
  #   config:
  #     tlsClientConfig:
  #       insecure: false
  #       caData: "<base64 encoded certificate>"

  rbacConfig:
    policy.default: role:readonly
    policy.csv: |
      g, brad@odysseycloud.io, role:admin
      g, amit@odysseycloud.io, role:admin
    scopes: '[email,group]'

  config:
    url: https://argocd.$CLIENT_DOMAIN_URL

    dex.config: | 
      connectors:
        - type: saml
          id: saml
          name: saml
          config:
            ssoURL: https://accounts.google.com/o/saml2/idp?idpid=C02ihwbf4
            entityIssuer: https://argocd.odysseycloud.io/api/dex/callback
            caData: |
              
            redirectURI: https://argocd.odysseycloud.io/api/dex/callback
            usernameAttr: name
            emailAttr: email
            # optional
            ssoIssuer: https://accounts.google.com/o/saml2?idpid=C02ihwbf4

          
    
